<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="110dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/roundcoruner_brown">

    <ImageView
        android:id="@+id/alcohol_item_image"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_emoji_food_beverage_24"
        app:layout_constraintBottom_toTopOf="@+id/alcohol_item_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alcohol_item_text"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="제품 이름"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>